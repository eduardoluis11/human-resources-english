{% extends "disposicion-para-impresoras.html" %}

{% block title %}
    Payroll Statement
{% endblock %}

<!-- Liquidación de Salarios del trabajador seleccionado en formato para imprimir (sin navbar ni footer). -->
{% block body %}

    <!-- Esto pondrá el nombre del trabajador en el título de la Liquidación de Salarios.

    No pondré el enlace a la página anterior para que no se vea en la planilla a imprimir.

    Tenia que poner “.url” al final de “datos.foto_firma_trabajador” para que me imprimiera la imagen -->
    {% for datos in liquidacion_seleccionada %}
        <h1>{{datos.nombre}} {{datos.apellidos}}'s Payroll Statement</h1>
        <br>
        <br>

        <!-- Datos de la sanción seleccionada -->
        <p><b>Name</b></p>
        <p>{{datos.nombre}}</p>

        <p><b>Last Name</b></p>
        <p>{{datos.apellidos}}</p>

        <p><b>ID Number</b></p>
        <p>{{datos.cedula}}</p>

<!--        Salario mensual-->
        <p><b>Monthly Wage</b></p>
        <p>${{datos.salario_mensual}}</p>

<!--        Ingresos Extras-->
        <p><b>Supplemental Income</b></p>
        <p>${{datos.ingresos_extras}}</p>

<!--        Descuentos-->
        <p><b>Discounts</b></p>
        <p>${{datos.descuentos}}</p>

        <hr>
        <br>
        <br>

        <!-- Total a liquidar -->
<!--        Salario total a liquidar-->
        <h3>Total Wage to Pay</h3>
        <br>
        <p><b>{{datos.salario_total_a_liquidar}} $</b></p>

        <br>
        <br>

<!--        Fecha de pago-->
        <p><b>Payment Date</b></p>
        <p>{{datos.fecha_de_pago}}</p>

<!--        Firma del encargado que le concedió la Liquidación al Trabajador-->
        <p><b>Signature of the manager that created the payroll report</b></p>
        <img src="{{datos.foto_firma_encargado_rrhh.url}}" height="100px">
        <br>
        <br>

<!--        Fecha en la que se registró la Liquidación-->
        <p><b>Date in which the payroll statement was registered</b></p>
        <p>{{datos.timestamp}}</p>
    {% endfor %}
{% endblock %}